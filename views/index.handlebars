<style>
  body {
    background-image: url({{image}});
  }
</style>
<div class="container">
  <h1>{{sport}} Articles</h1>

  {{#each results}}
  <div class="card mb-3" style="background-color:rgb(255, 255, 255, 0.85)">
    <h5 class="card-header">{{sport}}</h5>
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <p class="card-text">{{preview}}</p>
      <a href="{{link}}" class="btn btn-primary">Go to Article</a>
    </div>
  </div>
  {{/each}}
</div>